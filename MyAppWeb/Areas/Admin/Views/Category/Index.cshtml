@model MyApp.Models.ViewModels.CategoryVM 
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6 text-info fw-bold">
            <h1>Categories</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateUpdate" class="btn btn-primary"  asp-controller="Category" Create New Category asp-action="CreateUpdate" asp-controller="Category">
                <i class="bi bi-file-earmark-plus"></i>
                Create New Category

            </a>
        </div>
    </div>

</div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category ID
            </th>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.categories)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.DisplayOrder
            </td>
            <td role="group" class="text-center">
                    <a asp-action="CreateUpdate" asp-controller="Category" class="btn btn-info" asp-route-id="@item.Id"><i class="bi bi-pen"></i></a>
     
                    <a asp-action="Delete" asp-controller="Category" class="btn btn-danger ms-3" asp-route-id="@item.Id"><i class="bi bi-trash-fill "></i></a>
                </td>
        </tr>
        }
    </tbody>
</table>

