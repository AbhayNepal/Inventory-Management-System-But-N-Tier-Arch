@{
    Layout = "_Layout";
}
@model MyApp.Models.ViewModels.CategoryVM
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-3">
                <h2 class="text-primary">@((Model.Category == null) || (Model.Category.Id == 0)?"Create ":"Update ")Category</h2>
                <hr/>

            </div>
            <div asp-validation-summary="All"></div>
            <input asp-for="Category.Id" hidden />
            <div class="row mb-3">
                <label asp-for="Category.Name"></label>
                 <input asp-for="Category.Name" />
                <span asp-validation-for="Category.Name" class="text-danger fw-bold bg-opacity-50"></span>
            </div>
        <div class="row mb-3">
            <label asp-for="Category.DisplayOrder" ></label>
            <input asp-for="Category.DisplayOrder" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger fw-bold bg-opacity-50"></span>
        </div>
        <button class="btn-primary btn" type="submit">@((Model.Category == null) || (Model.Category.Id == 0) ? "Create " : "Update ")</button>
        </div>
        <br/>
        <br/>
    <div class="text-center"> <a asp-action="Index" asp-controller="Category"><i class="bi bi-caret-left-fill btn btn-primary "></i></a></div>
    </form>

    @section scripts{
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }
